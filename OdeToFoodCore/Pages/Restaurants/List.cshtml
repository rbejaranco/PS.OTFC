@page
@model ListModel
@{
}

<h1>Restaurants</h1>


<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>


<div>
    <table class="table">
        @foreach (var _restaurant in Model.Restaurants)
        {
            <tr>
                <td>@_restaurant.Name</td>
                <td>@_restaurant.Location</td>
                <td>@_restaurant.Cuisine</td>
                <td>
                    <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@_restaurant.Id">
                        <i class="glyphicon glyphicon-zoom-in"></i>
                    </a>
                </td>
            </tr>
        }
    </table>

</div>

<div>@Model.Message</div>
